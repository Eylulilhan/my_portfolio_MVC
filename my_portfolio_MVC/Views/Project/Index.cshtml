@model List<my_portfolio_MVC.Models.Tbl_Procets>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int Count = 0;
}

<h2>Projelerim</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Proje Adı</th>
        <th>Proje Açıklaması</th>
        <th>Kategori</th>
        <th>Github Url</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        Count++;
        <tr>
            <td>@Count</td>
            <td><img src="@item.imageUrl" style="width:50px;height:50px" alt="Proje görseli" />  @item.Name</td>
            <td>@item.Description</td>
            <td>@item.Categoryid</td>
            <td><a href="@item.GitHubUrl" class="btn btn-outline-warning">Github Linki</a></td>
            <td><a href="/Project/DeleteProject/@item.Projectid" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.Projectid" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>
<br/>
<a href="/Project/CreateProject/" class="btn btn-outline-success">Yeni Proje Ekle</a>

