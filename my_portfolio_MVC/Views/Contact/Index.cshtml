@model List<my_portfolio_MVC.Models.Tbl_Contacts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>İletişim Bilgileri Sayfasına Hoş geldiiz...</h2>
<br />
<table class="table table-bordered">
    
    <tr>
        <th>#</th>
        <th>Telefon No</th>
        <th>E-mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var e in Model)
    {
        count++;
        <tr>
            


            <td>@count</td>
            <td>@e.Pnone</td>
            <td>@e.Email</td>
            <td><a href="/Contact/DeleteContact/@e.Contactid" class="btn btn-outline-danger">SİL</a></td>
            <td><a href="/Contact/UpdateContact/@e.Contactid" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Contact/AddContact" class="btn btn-outline-warning">Yeni İletişim Bilgisi Ekle</a> 
