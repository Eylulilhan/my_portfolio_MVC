@model my_portfolio_MVC.Models.Tbl_Admins
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Profil Bilgileri Güncelleme Sayfasına Hoş geldiniz... </h2>
 
<form method="post" enctype="multipart/form-data">
    <div class="text-center">
        <label>Profil Resmi</label>
        <br />
        <img src="@Model.ImageUrl" style="width:75px;height:100px" alt="Profil Resmi" />
    </div>
    <br />
    <br />
    <label>Profil Resmi Yükleyin</label>
    <input type="file" name="ImageFile" />
    <br />
    <label>Ad</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />
    <br />
    <label>Soyad</label>
    <input type="text" name="Surname" class="form-control" value="@Model.Surname" />
    <br />
    <label>Email</label>
    <input type="text" name="Email" class="form-control" value="@Model.Email" />
    <br />

    <label>Şifreyi Giriniz</label>
    <input type="password" name="Password" class="form-control" />  
    <br />
    <p style="color:red">@Html.ValidationSummary()</p>
    <br />
    <button class="btn-outline-primary">Profil bilgilerini Güncelle</button>



</form>

