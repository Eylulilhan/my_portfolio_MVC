@model List<my_portfolio_MVC.Models.Tbl_Educations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Eğitim Hayatım</h2>
<br/>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <td>Okul Adı</td>
        <td>Bölüm</td>
        <td>Başlangıç</td>
        <td>Derece</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>

    @foreach(var item in Model)
            {
        count++;
                <tr>
                    <th>@count</th>
                    <td>@item.SchoolName</td>
                    <td>@item.Department</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@(item.EndTime==null ? "Devam Ediyor":item.EndTime?.ToShortDateString())</td>
                    <td>@item.Degree</td>
                    <td><a href="/Education/UpdateEducation/@item.Educationid" class="btn btn-outline-info">Güncelle</a></td>
                    <td><a href="/Education/DeleteEducation/@item.Educationid" class="btn btn-outline-danger">Sil</a></td>
                </tr>
            }
</table>
<br/>
<a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Ekle</a>

