@model List<my_portfolio_MVC.Models.Tbl_Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
     
<h2>Kategoriler</h2>
<br/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Categoryid</td>
            <td>@item.Name</td>
            <td><a href="/Category/DeleteCategory/@item.Categoryid" class=" btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.Categoryid" class=" btn btn-outline-info">Güncelle</a></td>
        </tr>
    }


        </tbody>

</table>
<br/>
<a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle</a>

